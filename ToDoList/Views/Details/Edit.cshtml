<div>
	<h1>
		<a href="/Details/Index">
			<i class="bi bi-arrow-left me-3"></i>
		</a>
		Edit Title
	</h1>
</div>
<form action="/Details/Edit" method="post">
	<div class="my-3">
		<input type="hidden" name="userId" value="@Model.Id" />
	</div>
	<div class="my-3">
		<input type="text" class="form-control" name="title" value="@Model.Title" />
	</div>
	<div class="my-3">
		<input type="text" class="form-control" name="description" value="@Model.Description" />
	</div>
	<div class="my-3">
		<input type="datetime-local" class="form-control" name="date" value="@Model.Date" />
	</div>
	<button type="submit" class="btn btn-outline-warning" >Save</button>
</form>
